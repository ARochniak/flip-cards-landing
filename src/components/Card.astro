---
interface Props {
	title: string
	class?: string
	titleClass?: string
}

const { title, titleClass, class: className } = Astro.props;
---
<div class:list={["flex flex-col bg-gray-100 rounded-2xl overflow-hidden max-w-80 min-h-80 max-sm:w-70 shrink-0 border-2", className]}>
	<h3 class:list={["text-2xl md:text-xl font-bold text-white p-4 min-h-24 flex items-center", titleClass]}>{title}</h3>
	<div class="text-lg md:text-md p-4 grow flex items-center text-slate-700"><slot /></div>
</div>
